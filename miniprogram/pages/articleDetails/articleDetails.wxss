page {
  background-color: #fff;
  padding-top: 80rpx;
}
.container {
  padding: 20rpx;
}
.title {
  display: flex;
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  top: 0;
  padding: 20rpx;
  background-color: #fff;
}
.title .left {
  display: flex;
  align-items: center;
}
.title .left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.title .left text {
  font-size: 28rpx;
}
.article_content {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #444;
}
.article_pageviews {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.article_images image {
  width: 100%;
}