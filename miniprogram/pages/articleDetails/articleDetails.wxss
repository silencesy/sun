page {
  background-color: #fff;
  padding-top: 80rpx;
  padding-bottom: 60rpx;
}
.container {
  padding: 20rpx;
}
.title {
  display: flex;
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  top: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 4px #eee;
}
.title .left {
  display: flex;
  align-items: center;
}
.title .left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.title .left text {
  font-size: 28rpx;
}
.article_content {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #444;
}
.article_pageviews {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.article_images image {
  width: 100%;
}
.article-bottom {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow: 0 0 4px #eee;
}
.article-bottom {
  display: flex;
}
.article-bottom .left,.article-bottom .right {
  display: flex;
  align-items: center;
}
.article-bottom .left > view {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.article-bottom .left > view .number {
  font-size: 28rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;
  color: #666;
}
.article-bottom .left {
  flex: 1;
  justify-content: space-around;
}
.article-bottom .right {
  flex: 1;
  justify-content: flex-end;
  padding-right: 40rpx;
  position: relative;
}
.article-bottom .right .share-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  opacity: 0;
}
.article-bottom .right .share {
  font-size: 28rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;
  color: #666;
}
.addComment {
  background-color: #eee;
  padding: 20rpx;
}
.addComment input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  background-color: #fff;
  padding-left: 20rpx;
  border-radius: 8rpx;
}
.comment-content .comment-title {
  font-size: 32rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 10px solid #eee;
  margin: 0 -20rpx;
}
.comment-content .comment-item {
  display: flex;
  padding: 20rpx 0;
  justify-content: space-between;
}
.comment-content .comment-item image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.comment-content .comment-item .comment-info {
  width: 630rpx;
  border-bottom: 1rpx solid #eee;
}
.comment-content .comment-item .comment-info .comment-info-name {
  font-size: 26rpx;
  color: #999;
}
.comment-content .comment-item .comment-info .comment-info-content {
  font-size: 32rpx;
  padding: 10rpx 0;
}
.comment-content .comment-item .comment-info  .comment-info-date {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}

.reply-content {
  padding:15rpx;
  background: #f6f6f6;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}
.reply-content:empty {
  display: none;
}
.user_name_comment {
  color: #999;
}
.comment-info-content-reply {
  font-size: 28rpx;
  color: #444;
}
.reply-comment-btn {
  padding: 0 30rpx;
  margin-right: -20rpx;
}
.row_comment {
  line-height: 40rpx;
}