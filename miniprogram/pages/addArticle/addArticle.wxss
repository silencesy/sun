page {
  background-color: #fff;
}
.container {
  padding: 0 30rpx;
}
.title-input {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #dfdfdf;
}
.title-input input {
  color: #222;
}
.content-textarea {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #dfdfdf;
}
.content-textarea textarea {
  width: 100%;
  color: #222;
}
.address {
  display: inline-block;
  background-color: #ddd;
  width: auto;
  border-radius: 30rpx;
  padding: 0 30rpx;
}
.address .icon {
  float: left;
}
.address .text {
  color: #aaa;
  font-size: 22rpx;
  margin-top: 8rpx;
  float: left;
}
.img-box {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #dfdfdf;
  display: flex;
  flex-wrap: wrap;
}
.img-box .img-item {
  width: 160rpx;
  line-height: 160rpx;
  height: 160rpx;
  background-color: #ddd;
  text-align: center;
  color: #fff;
  margin-right: 17rpx;
  margin-bottom: 17rpx;
  position: relative;
}
.img-box .img-item:nth-child(4n) {
  margin-right: 0;
}
.img-box .img-item .delete {
  position: absolute;
  right: 5rpx;
  top: -34%;
  z-index: 10;
}
.img-box .img-item image {
  width: 160rpx;
  height: 160rpx;
}
.submit-btn {
  background-color: #f6b400;
  width: 710rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: auto;
  bottom: 20rpx;
  margin: auto;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}


